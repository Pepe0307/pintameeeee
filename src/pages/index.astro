---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductCard from '../components/ProductCard.astro';
import { getCollection } from 'astro:content';

const allProducts = await getCollection('products');
const featuredProducts = allProducts.filter(product => product.data.featured);
---

<BaseLayout 
  title="Inicio"
  description="Pintame - Descubre y compra obras de arte únicas, hechas a mano y pintadas a mano por Lida. Explora su colección exclusiva desde Colombia."
>
  <!-- Hero Section -->
  <section class="relative h-[55vh] flex items-center justify-center bg-gallery-dark-pink">
    <div class="absolute inset-0 opacity-20">
      <div class="w-full h-full bg-[url('/images/hero-pattern.svg')] bg-repeat"></div>
    </div>
    
    <div class="relative z-10 text-center text-white px-4 max-w-4xl">
      <h1 class="font-display text-5xl md:text-7xl font-bold mb-6 text-gallery-bone">
        Descubre <span class="text-gallery-light-pink">Arte</span> Único
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-gallery-bone">
        Colección curada de obras de arte excepcionales, hechas a mano y pintadas a mano por Lida, desde Colombia.
      </p>
      <a href="/catalogue" class="btn-primary text-lg">
        Explorar Colección
      </a>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-20 px-4">
    <div class="container mx-auto">
      <div class="text-center mb-12">
        <h2 class="font-display text-4xl font-bold text-gallery-charcoal mb-4">
          Obras de Arte Destacadas
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Piezas cuidadosamente seleccionadas que muestran una creatividad y artesanía excepcionales
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredProducts.map(product => (
          <ProductCard 
            slug={product.id.replace('.json', '')}
            title={product.data.title}
            artist={product.data.artist}
            price={product.data.price}
            currency={product.data.currency}
            image={product.data.image}
            category={product.data.category}
            available={product.data.available}
          />
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/catalogue" class="btn-primary">
          Ver Todas las Obras →
        </a>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="py-20 px-4 bg-white">
    <div class="container mx-auto max-w-4xl text-center">
      <h2 class="font-display text-4xl font-bold text-gallery-charcoal mb-6">
        Sobre Nuestra Galería
      </h2>
      <p class="text-lg text-gray-600 leading-relaxed">
        Creemos que el arte debe ser accesible para todos. Aquí te conectamos directamente con la artista Lida, ofreciendo piezas únicas, hechas y pintadas a mano, que transformarán tu espacio. Cada obra de arte es cuidadosamente elaborada con calidad, creatividad e impacto emocional.
      </p>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20 px-4 bg-gallery-sage/20">
    <div class="container mx-auto max-w-2xl text-center">
      <h2 class="font-display text-4xl font-bold text-gallery-charcoal mb-6">
        Ponte en Contacto
      </h2>
      <p class="text-gray-600 mb-8">
        ¿Tienes preguntas sobre nuestras obras de arte? ¿Quieres encargar una pieza? 
        ¡Contáctanos directamente por WhatsApp!
      </p>
      <a 
        href="https://wa.me/+573127944523?text=¡Hola! Tengo una pregunta sobre tu galería de arte."
        target="_blank"
        rel="noopener noreferrer"
        class="btn-whatsapp inline-flex text-lg"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
